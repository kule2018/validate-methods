{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "es",
        "module": "es6",
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "paths": {
            "@/*": ["src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}
